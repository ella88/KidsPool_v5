<%- include("../partials/header.ejs")%>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to Yelp Camp</h1>
                <p>View our hand-picked campground sites, where you can enjoy your great time camping!</p>
                <p>
                    <a class="btn btn-primary" href="/campgrounds/new">Add Campground+</a>
                </p>
            </div>
        </header>
    </div>

    <div class="container">
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% sites.forEach(function(site){ %>

                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= site.image %>">
                        <div class="caption">
                            <h3>
                                <%= site.name %>
                            </h3>
                            <p><a href="#" class="btn btn-success" role="button">Book</a> <a href="/campgrounds/<%= site._id %>" class="btn btn-info" role="button">View</a></p>
                        </div>
                    </div>
                </div>

                <% }) %>

        </div>
    </div>

    <%- include("../partials/footer.ejs")%>