<%- include("../partials/header.ejs")%>
    <h1>Edit Campground </h1>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Edit CampGround:
                <%=camp.name%>
            </h1>
            <div style="width: 40%; margin: 30px auto;">
                <form action="/campgrounds/<%=camp._id%>?_method=PUT" , method="POST">
                    <div class="form-group">
                        Camp site: <input class="form-control" type="text" name="camp[name]" value="<%=camp.name%>">
                    </div>
                    <div class="form-group">
                        Price: <input class="form-control" type="number" name="camp[price]" value="<%=camp.price%>" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        Image: <input class="form-control" type="text" name="camp[image]" value="<%=camp.image%>">
                    </div>
                    <div class="form-group">
                        Description: <textarea row=10 class="form-control" name="camp[description]"><%=camp.description%></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Go back</a>
            </div>
        </div>
    </div>

    <%- include("../partials/footer.ejs")%>