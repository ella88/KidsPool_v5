<%- include("../partials/header.ejs")%>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Create a new Camp Ground</h1>
            <div style="width: 40%; margin: 30px auto;">
                <form action="/campgrounds" , method="POST">
                    <div class="form-group">
                        Camp site: <input class="form-control" type="text" name="name" placeholder="Camp site name">
                    </div>
                    <div class="form-group">
                        Price: <input class="form-control" type="number" name="price" placeholder="Price each night ($)" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        Image: <input class="form-control" type="text" name="image" placeholder="Image url">
                    </div>
                    <div class="form-group">
                        Description: <input class="form-control" type="text" name="description" placeholder="Describe your views">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Go back</a>
            </div>
        </div>
    </div>

    <%- include("../partials/footer.ejs")%>