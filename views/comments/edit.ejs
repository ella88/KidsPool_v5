<%- include("../partials/header.ejs")%>
    <h1>Here is comment update page!</h1>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Edit Your Comments </h1>
            <div style="width: 40%; margin: 30px auto;">
                <form action="/campgrounds/<%=camp_id%>/comments/<%=comment._id%>?_method=PUT" , method="POST">
                    <div class="form-group">
                        Comments: <textarea class="form-control" type="text" name="comment[text]"><%=comment.text%></textarea>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Go back</a>
            </div>
        </div>
    </div>

    <%- include("../partials/footer.ejs")%>